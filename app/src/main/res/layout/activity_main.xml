<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@color/white"
            android:id="@+id/image_test"
            android:layout_width="400dp"
            android:layout_height="768px"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginTop="7dp"
            android:src="@android:drawable/gallery_thumb">
        </ImageView>
        <LinearLayout
            android:id="@+id/layout_show_color"
            android:layout_width="20dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageView_absorbcolor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic"
                android:src="@mipmap/ic">
            </ImageView>
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp" />
    <LinearLayout
        android:id="@+id/xy_layout"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_height="66dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x坐标"
            android:textSize="14sp">
        </TextView>
        <EditText
            android:id="@+id/intput_X"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="y坐标"
            android:textSize="14sp">

        </TextView>
        <EditText
            android:id="@+id/intput_y"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="">
        </EditText>

        <Button
            android:layout_marginStart="5dp"
            android:id="@+id/btn_select"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="select">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rgb_layout"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="56dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_r"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:text="R:">
            </TextView>

            <SeekBar

                android:id="@+id/SeekBar_R"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:progressDrawable="@drawable/seekbar_r">

            </SeekBar>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_g"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:text="G:">
            </TextView>

            <SeekBar
                android:id="@+id/SeekBar_G"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:progressDrawable="@drawable/seekbar_g">

            </SeekBar>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_b"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:text="B:">
            </TextView>

            <SeekBar

                android:id="@+id/SeekBar_B"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:progressDrawable="@drawable/seekbar_b">

            </SeekBar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_Gray"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:text="灰:">

            </TextView>

            <SeekBar
                android:id="@+id/SeekBar_Gray"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:progressDrawable="@drawable/seekbar_gray"
                >

            </SeekBar>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_camera"
                android:layout_width="125dp"
                android:layout_height="47dp"
                android:src="@android:drawable/ic_menu_camera">

            </ImageView>
            <ImageView
                android:id="@+id/image_gallery"
                android:layout_width="125dp"
                android:layout_height="47dp"
                android:src="@android:drawable/ic_menu_gallery">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp">
            <Button
                android:id="@+id/btn_analysis"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="analysis"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="ClearData"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
